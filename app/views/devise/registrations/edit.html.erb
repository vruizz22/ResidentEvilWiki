<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <!-- Previsualización de imagen -->
  <div class="field">
    <% if resource.imagen_perfil.attached? %>
      <%= image_tag resource.imagen_perfil, class: "profile-preview", style: "max-width: 200px; display: block;" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Nueva contraseña" %> <i>(dejar en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em>Mínimo <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Contraseña actual" %> <i>(necesaria para confirmar cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", required: true %>
  </div>

  <!-- Campos adicionales -->
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label :descripcion, "Descripción (#{resource.descripcion.to_s.length}/500)" %><br />
    <%= f.text_area :descripcion, 
          maxlength: 500, 
          rows: 4, 
          class: "form-control",
          data: { controller: "char-counter" } %>
    <div class="char-counter"><span id="descripcion-counter"><%= resource.descripcion.to_s.length %></span>/500</div>
  </div>

  <div class="field">
    <%= f.label :imagen_perfil, "Foto de perfil" %>
    <%= f.file_field :imagen_perfil, accept: "image/jpeg, image/png" %>
    <small class="form-text text-muted">Formatos permitidos: JPG/PNG (Máximo 5MB)</small>
    <% if resource.errors[:imagen_perfil].any? %>
      <div class="error-message"><%= resource.errors[:imagen_perfil].join(', ') %></div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
